@page "/Clientes/Index"
@inject ClienteServices clienteServices

<h3>Lista de Clientes</h3>

@if (clientes == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombres</th>
                <th>RNC</th>
                <th>Dirección</th>
                <th>Límite de Crédito</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in clientes)
            {
                <tr>
                    <td>@cliente.Nombres</td>
                    <td>@cliente.Rnc</td>
                    <td>@cliente.Direccion</td>
                    <td>@cliente.LimiteCredito</td>
                    <td>
                        <a href="/Clientes/Details/@cliente.ClienteId" class="btn btn-info"><i class="fas fa-info-circle"></i> Detalles</a>
                        <a href="/Clientes/Edit/@cliente.ClienteId" class="btn btn-warning"><i class="fas fa-edit"></i> Editar</a>
                        <a href="/Clientes/Delete/@cliente.ClienteId" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Clientes/Create" class="btn btn-primary"><i class="fas fa-plus"></i> Nuevo Cliente</a>
}

@code {
    private List<Cliente> clientes;

    protected override async Task OnInitializedAsync()
    {
        clientes = await clienteServices.Listar();
    }
}